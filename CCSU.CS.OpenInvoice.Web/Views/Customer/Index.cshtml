<h3 class="page-title">Customer Information</h3>

@*
    References:
    https://getbootstrap.com/docs/5.2/components/modal/
    https://stackoverflow.com/questions/17142790/bootstrap-modal-not-working-at-all
    https://datatables.net/examples/ajax/objects.html
*@

@Html.AntiForgeryToken()

<!-- Button Trigger Customer Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Add Customer
</button>

<!-- Add Customer Modal -->
<div class="modal fade" id="myModal" data-bs-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Customer</h1>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="customer-form">
                <div class="modal-body">
                    <div class="row align-items-start">
                        <div class="col">
                            <label>Name:</label>
                            <input type="text" class="form-control" asp-for="Name">
                        </div>
                        <div class="col">
                            <label>Contact:</label>
                            <input type="text" class="form-control" asp-for="Contact">
                        </div>
                        <div class="col">
                            <label>Address:</label>
                            <input type="text" class="form-control" asp-for="Address">
                        </div>
                        <div class="col">
                            <label>Address 2:</label>
                            <input type="text" class="form-control" asp-for="Address2">
                        </div>
                    </div>

                    <div class="row align-items-start">
                        <div class="col">
                            <label>City:</label>
                            <input type="text" class="form-control" asp-for="City">
                        </div>
                        <div class="col">
                            <label>State:</label>
                            <input type="text" class="form-control" asp-for="State">
                        </div>
                        <div class="col">
                            <label>Zip Code:</label>
                            <input type="text" class="form-control" asp-for="Zip">
                        </div>
                        <div class="col">
                            <label>Country:</label>
                            <input type="text" class="form-control" asp-for="Country">
                        </div>
                    </div>

                    <div class="row align-items-start">
                        <div class="col">
                            <label>Phone:</label>
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>
                        <div class="col">
                            <label>Email Address:</label>
                            <input type="text" class="form-control" asp-for="Email">
                        </div>
                        <div class="col">
                        </div>
                        <div class="col">
                        </div>
                    </div>

                    <div class="row align-items-start">
                        <div class="col">
                            <label>Notes:</label>
                            <textarea class="form-control" asp-for="Notes"></textarea>
                        </div>
                    </div>
                </div>



                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>


                <div asp-validation-summary="ModelOnly">
                    <span>Please correct the following errors</span>
                </div>
            </form>
        </div>
    </div>
</div>

<table id="example" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Address 2</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
 
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Address 2</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </tfoot>
</table>