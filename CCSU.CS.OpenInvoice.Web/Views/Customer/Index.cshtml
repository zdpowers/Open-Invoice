@model Customer

@section Scripts{
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>

    <script src="~/js/Customer.js"></script>

}


<h3 class="page-title">Customer Information</h3>

@*
    References:
    https://getbootstrap.com/docs/5.2/components/modal/
    https://stackoverflow.com/questions/17142790/bootstrap-modal-not-working-at-all
    https://datatables.net/examples/ajax/objects.html
*@

@Html.AntiForgeryToken()

<!-- Button Trigger Customer Modal -->
<div class="mb-3">
   
    <button type="button" id="addButton" class="btn btn-success" data-toggle="modal" data-target="#myModal"><i class="fa-solid fa-plus p-1"></i>Add Customer</button>

</div>

<!-- Edit Customer Modal -->
<partial name="_customerModal">
    <!-- Add Customer Modal -->
    <div class="modal fade" id="myModal" data-bs-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Customer</h1>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="customer-form">
                    <div class="modal-body">
                        <div class="col-md-9">
                            <div class="row">
                                <div class="form-group col">
                                    <label>Customer Name:</label>
                                    <input type="text" class="form-control" id="customerName" asp-for="Name">
                                </div>
                                <div class="form-group col">
                                    <label>Contact Name:</label>
                                    <input type="text" class="form-control" id="customerContact" asp-for="Contact">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col">
                                    <label>Phone:</label>
                                    <input type="text" class="form-control" id="customerPhone" asp-for="Phone">
                                </div>
                                <div class="form-group col">
                                    <label>Email Address:</label>
                                    <input type="text" class="form-control" id="customerEmail" asp-for="Email">
                                </div>
                            </div>
                        </div>

                        <div class="card company-card">
                            <div class="card-body">
                                <div class="card-title company-card-title">Address Information</div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" class="form-control" placeholder="1234 Main St" id="customerAddress" asp-for="Address">
                                </div>
                                <div class="form-group">
                                    <label>Address 2</label>
                                    <input type="text" class="form-control" placeholder="Apartment, studio, or floor" id="customerAddress2" asp-for="Address2">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label>City</label>
                                        <input type="text" class="form-control" id="customerCity" asp-for="City">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>State</label>
                                        <input type="text" class="form-control" id="customerState" asp-for="State">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label>Zip</label>
                                        <input type="text" class="form-control" id="customerZip" asp-for="Zip">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Country</label>
                                        <input type="text" class="form-control" id="editCustomerCountry" asp-for="Country">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card company-card">
                            <div class="card-body">
                                <div class="card-title company-card-title">Customer Notes</div>
                                <div class="form-group">
                                    <label>Notes</label>
                                    <textarea class="form-control" id="customerNotes" asp-for=" Notes" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                    <div asp-validation-summary="ModelOnly">
                        <span>Please correct the following errors</span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Address</th>
                <th>Address 2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
    </table>
