@model Customer

<div class="modal fade" id="delete-customer-modal" data-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 style="text-align: center">Are you sure you want to delete the following customer?</h5>
                <h1 class="cust-conf-name" style="text-align: center">Test</h1>
            </div>
            <div class="modal-footer">
                <input type="hidden" class="form-control" id="editCustomerIdConfirmation"> <!--This is required for the delete-->
                <button type="button" class="btn btn-danger btn-customer-delete">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>